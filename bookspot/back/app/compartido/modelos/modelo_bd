from sqlalchemy import create_engine
from sqlalchemy.orm import sessionmaker
from core.base import Base
from modelo_metodo_pago import MetodoPago
from modelo_grupo import Grupo
from modelo_usuario import Usuario
from modelo_venta import Venta
from modelo_detalle_venta import DetalleVenta
from modelo_libro import Libro
from modelo_apartado import Apartado
from modelo_detalle_apartado import DetalleApartado
from modelo_tipo_movimiento import TipoMovimiento
from modelo_movimiento import Movimiento

# Crear la base de datos
engine = create_engine('sqlite:///libreria.db')
Base.metadata.create_all(engine)

# Crear una sesión
Session = sessionmaker(bind=engine)
session = Session()

